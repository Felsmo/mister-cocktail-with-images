<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <h1><%= @cocktail.name %></h1>

      <% @doses.each do |d| %>
      <%= d.description %>
      <%= d.ingredient.name %>
      <% end %>

      <%= simple_form_for [@cocktail, @dose] do |f|%>
      <%= f.input :description %>
      <%= f.input :ingredient_id, collection: @ingredients %>
      <%= f.input :photo %>
      <%= f.submit "submit" %>
      <% end %>

      <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>

      <%= link_to 'Back', cocktails_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>
